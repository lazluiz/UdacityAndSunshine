<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zelius.android.sunshine.app">

    <uses-permission android:name="android.permission.INTERNET"/>

    <permission
        android:name="com.zelius.android.sunshine.app.LICENSE_TO_KILL"
        android:label="Licenced to Kill"
        android:protectionLevel="dangerous"/>

    <!-- Permissions required by the sync adapter -->
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.zelius.android.sunshine.app.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/ForecastTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.zelius.android.sunshine.app.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.zelius.android.sunshine.app.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zelius.android.sunshine.app.MainActivity"/>

        </activity>

        <activity
            android:name="com.zelius.android.sunshine.app.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.zelius.android.sunshine.app.MainActivity"
            android:theme="@style/SettingsTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zelius.android.sunshine.app.MainActivity"/>
        </activity>

        <!-- Content Provider -->
        <provider
            android:name="com.zelius.android.sunshine.app.data.WeatherProvider"
            android:authorities="@string/content_authority"
            android:enabled="true"
            android:exported="false"
            android:syncable="true"/>

        <!-- The SyncAdapter service -->
        <service
            android:name="com.zelius.android.sunshine.app.sync.SunshineSyncService"
            android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter"/>
        </service>

        <!-- SyncAdapter's dummy authentication service -->
        <service
            android:name="com.zelius.android.sunshine.app.sync.SunshineAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator"/>
        </service>

    </application>

</manifest>